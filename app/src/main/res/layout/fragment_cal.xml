<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".NameFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:theme="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cal_month_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cal_left_button"
                />
            <TextView
                android:id="@+id/cal_month_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cal_month_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cal_right_button"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="#f8b5df">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="8pt"
                android:gravity="center_horizontal"
                android:text="일"
                android:textColor="#ff0000"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="8pt"
                android:gravity="center_horizontal"
                android:text="월"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="8pt"
                android:gravity="center_horizontal"
                android:text="화"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="8pt"
                android:gravity="center_horizontal"
                android:text="수"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="8pt"
                android:gravity="center_horizontal"
                android:text="목"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="8pt"
                android:gravity="center_horizontal"
                android:text="금"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="8pt"
                android:gravity="center_horizontal"
                android:text="토"
                android:textColor="#0000FF"
                />
        </LinearLayout>

        <GridView
            android:id="@+id/cal_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"

            android:paddingRight="1dp"
            android:paddingLeft="1dp"

            android:clickable="true"
            android:gravity="center"
            android:background="#f8b5df"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp"
            android:numColumns="7" />
    </LinearLayout>
</FrameLayout>


